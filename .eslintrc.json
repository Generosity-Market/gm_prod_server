{
    "extends": "airbnb-base",
    "env": {
        "jest": true,
        "node": true
    },
    "ignorePatterns": [
        "coverage/",
        "__mocks__/",
        "node_modules/"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "camelcase": [
            0,
            {
                "properties": "never"
            }
        ],
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ]
    }
}